<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">

    <persistence directory="work/Catalina/localhost/osl/osl-cache" />

    <cache-template name="featureTypeTemplate">
        <key-type>java.lang.String</key-type>
        <value-type>java.util.LinkedList</value-type>
        <expiry>
            <ttl unit="days">5</ttl>
        </expiry>
        <resources>
            <heap unit="MB">1</heap>
            <disk unit="MB" persistent="true">3</disk>
        </resources>
    </cache-template>

    <cache-template name="dataCacheTemplate">
        <key-type>be.vliz.opensealab.vectorLayers.model.DataCacheKey</key-type>
        <value-type>be.vliz.opensealab.feature.FeatureCollection</value-type>
        <expiry>
            <ttl unit="days">5</ttl>
        </expiry>
        <resources>
            <heap unit="MB">256</heap>
            <disk unit="GB" persistent="true">1</disk>
        </resources>
    </cache-template>

    <cache alias="featureData" uses-template="dataCacheTemplate"/>
    <cache alias="featureStats" uses-template="dataCacheTemplate">
        <value-type>be.vliz.opensealab.feature.SurfaceCount</value-type>
    </cache>

</config>